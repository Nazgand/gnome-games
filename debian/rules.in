gnome-gnothello@SUFFIX@: install
	@echo "--- Building: $@"
	dh_installdocs       -p$@ -P$(b)/$@ \
					gnothello/AUTHORS
	dh_installchangelogs -p$@ -P$(b)/$@ \
					gnothello/ChangeLog
	dh_movefiles         -p$@ -P$(b)/$@
	dh_strip             -p$@ -P$(b)/$@ 
	dh_compress          -p$@ -P$(b)/$@
	dh_fixperms          -p$@ -P$(b)/$@ 
	chmod 2755 $(b)/$@/@PREFIX@/games/* 
	chown root.games  $(b)/$@/@PREFIX@/games/*
	dh_suidregister	     -p$@ -P$(b)/$@
	dh_installmenu       -p$@ -P$(b)/$@
	dh_installdeb        -p$@ -P$(b)/$@
	dh_shlibdeps         -p$@ -P$(b)/$@
	dh_gencontrol        -p$@ -P$(b)/$@
	dh_makeshlibs        -p$@ -P$(b)/$@
	dh_undocumented      -p$@ -P$(b)/$@ \
				iagno.1
	#sh debian/fix-desktop-file iagno $(b)/$@
	dh_md5sums           -p$@ -P$(b)/$@
	dh_builddeb          -p$@ -P$(b)/$@


binary: binary-indep binary-arch
.PHONY: binary clean binary-indep binary-arch build install install-save install-saved


