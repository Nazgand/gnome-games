#!/usr/bin/make -f

i=$(shell pwd)/debian/tmp
b=$(shell pwd)/debian/build

DH_VERBOSE=1

configure: configure.in
	@echo "--- Making configure script and configuring"
	#chmod +x autogen.sh
	#./autogen.sh --prefix=/@PREFIX@ --with-gtk-prefix=/@GTKPREFIX@ --bindir=/@BINDIR@ --localstatedir=/@LOCALSTATEDIR@
	autoconf

Makefile: configure Makefile.in
	@echo "--- Configuring"
	chmod +x configure
	./configure --prefix=/@PREFIX@ --with-gtk-prefix=/@GTKPREFIX@ --bindir=/@BINDIR@ --localstatedir=/@LOCALSTATEDIR@ --sysconfdir=/etc

Makefile.in: Makefile.am
	aclocal -I macros
	libtoolize -c
	automake

build: configure Makefile build-debstamp
build-debstamp:
	@echo "--- Compiling"
	dh_testdir
	$(MAKE) all
	touch build-debstamp

clean: configure Makefile
	@echo "--- Cleaning"
	dh_testdir
	-rm -rf static shared
	-rm -f build-debstamp install-debstamp
	-make distclean
	-rm -f `find . -name "*~"`
	-rm -rf `find . -name "\.deps"`
	-rm -rf `find . -name "\.libs"`
	-rm -rf `find . -name "*\.rej"`
	-rm -rf debian/tmp `find debian/* -type d ! -name CVS` debian/files* core
	-rm -f debian/*substvars

install: build install-debstamp
install-debstamp:
	@echo "--- Installing"
	dh_testdir
	dh_testroot
	dh_clean
	rm -rf $(b)
	$(MAKE) install prefix=$(i)/@PREFIX@ exec_prefix=$(i)/@PREFIX@ bindir=$(i)/@BINDIR@ localstatedir=$(i)/@LOCALSTATEDIR@ sysconfdir=$(i)/etc
	mv $(i)/@PREFIX@/games/freecell $(i)/@PREFIX@/games/gnome-freecell
	chown root.games $(i)/@PREFIX@/games/*
	chmod 2755 $(i)/@PREFIX@/games/*
	cat $(i)/@PREFIX@/share/gnome/apps/Games/freecell.desktop | \
	  sed 's,Exec=freecell,Exec=gnome-freecell,' \
	  > $(i)/@PREFIX@/share/gnome/apps/Games/freecell.desktop.tmp
	mv -f $(i)/@PREFIX@/share/gnome/apps/Games/freecell.desktop.tmp \
	  $(i)/@PREFIX@/share/gnome/apps/Games/freecell.desktop
	touch install-debstamp

install-save: install
	rm -rf $(i).saved
	cp -a $(i) $(i).saved

install-saved:
	rm -rf $(i)
	cp -a $(i).saved $(i)
	rm -rf $(b)
	touch install-debstamp

