#! /bin/sh

set -e
ldconfig

for scorefile in iagno.b1.scores iagno.b2.scores iagno.b3.scores iagno.w1.scores iagno.w2.scores iagno.w3.scores  ; do
	if [ ! -f /var/lib/games/$scorefile ]; then
		touch /var/lib/games/$scorefile
	fi
	chown root.games /var/lib/games/$scorefile
	chmod 664 /var/lib/games/$scorefile
done

