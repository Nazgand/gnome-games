#! /bin/sh

for scorefile in gnibbles.1.0.scores gnibbles.1.1.scores gnibbles.2.0.scores gnibbles.2.1.scores gnibbles.3.0.scores gnibbles.3.1.scores gnibbles.4.0.scores gnibbles.4.1.scores ; do
	if [ ! -f /@LOCALSTATEDIR@/games/$scorefile ]; then
		touch /@LOCALSTATEDIR@/games/$scorefile
	fi
	chown root.games /@LOCALSTATEDIR@/games/$scorefile
	chmod 664 /@LOCALSTATEDIR@/games/$scorefile
done

